{
  "ts-node": {
    "transpileOnly": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "webworker",
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "actions/*": [
        "src/actions/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "models/*": [
        "src/models/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "routers/*": [
        "src/routers/*"
      ],
      "screens/*": [
        "src/screens/*"
      ],
      "scss/*": [
        "src/scss/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "images/*": [
        "src/images/*"
      ],
      "apollo/*": [
        "src/apollo/*"
      ],
      "controllers/*": [
        "server/controllers/*"
      ],
      "services/*": [
        "server/services/*"
      ],
      "api/*": [
        "server/api/*"
      ],
    },
    "allowSyntheticDefaultImports": true
  },
  "linterOptions": {
    "exclude": [
      "server/models/plugins/*"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "server/models/plugins/*"
  ]
}